<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Box">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/BoxTitle"
            android:text="@string/noise_suppression_box_title"/>
        <TextView
            style="@style/BoxText"
            android:id="@+id/subtitle"/>
    </LinearLayout>
        <TextView
        style="@style/BoxFeatureNotSupported"
        android:id="@+id/not_supported" />
    <RadioGroup
        android:id="@+id/radioButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:gravity="center"
        android:orientation="horizontal">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On"
            android:id="@+id/noiseSuppressionOn"
            android:layout_gravity="center_horizontal"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Off"
            android:id="@+id/noiseSuppressionOff"
            android:layout_gravity="right" />

    </RadioGroup>

    <TextView
        style="@style/BoxFooter"
        android:text="@string/noise_suppression_box_desc"/>
</LinearLayout>
